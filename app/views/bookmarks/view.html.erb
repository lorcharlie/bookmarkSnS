<h1>Listing bookmarks</h1>

<table>
  <tr>
    <th>URL</th>
    <th>Name</th>
    <th>Date Saved</th>
    <th class="nolines"></th>
    <th class="nolines"></th>
    <th class="nolines"></th>
  </tr>

<% @bookmarks.each do |bookmark| %>
  <tr>
    <td><%= bookmark.url %></td>
    <td><%= bookmark.name %></td>
    <td><%= bookmark.dateSaved %></td>
    <td class="options"><%= link_to 'Show', bookmark %></td>
    <td class="options"><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td class="options"><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

